alias ls="ls -F --color=always"
alias ll="ls -lthF --color=always"
alias la="ls -lthaF --color=always"
alias grep="grep -n --color=auto"
alias df="df -h"
alias du="du -c -h"
alias up="cd ../"
alias hm="cd ~"
alias dwn="cd ~/Downloads/"
alias src="cd ~/src/"
alias untrail="sed -i 's/\ *$//g'"
alias cl="clear"
